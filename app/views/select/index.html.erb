<h3 style="margin-left:160px;">You can select your employees</h3>

<% if @users.nil? %>
<% return "you are not authorized yet.Contact your manager or admin"  %>
<% else %>
<table style="width:80%;margin-left:10%;margin-top:40px; border: 2px solid black;background-color:white">
  <thead  style="border: 1px solid black;">
    <tr >
      <th style="width:30%;text-align:left;">Email</th>
      <th style="width:30%;text-align:left;">Name</th>
      <th style="width:20%;text-align:left;">Manager</th>
      <th style="width:20%;text-align:left;">Status</th>

      <th colspan="3"></th>
    </tr>
  </thead>
   <tbody style="@import url('https://fonts.googleapis.com/css?family=Dosis');font-family: 'Dosis', sans-serif;">
<% @users.each do |user| %>
<% value=""%>
<% if user.isemployee==true%>
<% value="Not available"%>
<% else %>
<% value="Available"%>
<% end %>
<% if user.ismanager %>
<% else %>
</tr>
<td style="width:30%;text-align:left;"><%= user.email %></td>
<td style="width:30%;text-align:left;"><%= user.try(:fullname) %></td>

<td style="width:20%;margin-right:50px;"><%= user.try(:managername) %></td>
<td style="width:20%;text-align:left;margin-right:0">
  <form action="/select/done" method="POST">
<input type="hidden" name="email" value="<%= user.email %>"><input type="submit" name="makeemployee"value="<%= value%>">
</form><td>

</tr>


<% end %>

<% end %>
<% end %>
</tbody>
</table>
